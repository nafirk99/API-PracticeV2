@using NZWalks.UI.Models.DTO
@model IEnumerable<CryptoTickerDto>

@{
    ViewData["Title"] = "Crypto Tickers";
}

<h1> Test Api Consumption</h1>
<p>GET API Request Time From Crypto:@ViewBag.CryptoTime</p>
<table class="table table-striped table-bordered table-hover">
    <thead class="bg-info">
        <tr>
            <th>Symbol</th>
            <th>Last Price</th>
            <th>Price Change</th>
            <th>Change (%)</th>
            <th>High Price</th>
            <th>Low Price</th>
            <th>Volume</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var ticker in Model)
            {
                <tr class="bg-light">
                    <td>@ticker.symbol</td>
                    <td>@ticker.lastPrice</td>
                    <td>@ticker.priceChange</td>
                    <td>@ticker.priceChangePercent</td>
                    <td>@ticker.highPrice</td>
                    <td>@ticker.lowPrice</td>
                    <td>@ticker.volume</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No data available.</td>
            </tr>
        }
    </tbody>
</table>
