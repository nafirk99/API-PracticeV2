@model IEnumerable<NZWalks.UI.Models.DTO.RegionDTO>

<h1 class="mt-3">Regions</h1>




<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Code</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var region in Model)
        {
            <tr>
                <td>@region.Id</td>
                <td>@region.Name</td>
                <td>@region.Code</td>
            </tr>
        }
    </tbody>
</table>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Code</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var region in Model)
        {
            <tr>
                <td>@region.Id</td>
                <td>@region.Name</td>
                <td>@region.Code</td>
            </tr>
        }
    </tbody>
</table>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">Regions</h5>
    </div>
    <div class="card-body p-0">
        <table class="table mb-0" style="border-collapse: separate; border-spacing: 0;">
            <thead>
                <tr style="background-color: #f8f9fa;">
                    <th style="border-top-left-radius: 8px;">Id</th>
                    <th>Name</th>
                    <th style="border-top-right-radius: 8px;">Code</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var region in Model)
                {
                    <tr>
                        <td>@region.Id</td>
                        <td>@region.Name</td>
                        <td>@region.Code</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<table class="table table-dark table-bordered table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Code</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var region in Model)
        {
            <tr>
                <td>@region.Id</td>
                <td>@region.Name</td>
                <td>@region.Code</td>
            </tr>
        }
    </tbody>
</table>

<style>
    .flat-table {
        width: 100%;
        border-collapse: collapse;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

        .flat-table th, .flat-table td {
            padding: 12px 15px;
            border: 1px solid #ddd;
            text-align: left;
        }

        .flat-table thead {
            background-color: #f5f5f5;
        }

        .flat-table tbody tr:hover {
            background-color: #f1f1f1;
        }
</style>

<table class="flat-table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Code</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var region in Model)
        {
            <tr>
                <td>@region.Id</td>
                <td>@region.Name</td>
                <td>@region.Code</td>
            </tr>
        }
    </tbody>
</table>









